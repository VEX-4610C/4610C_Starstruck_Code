/*---------------------------------------------------------------------------*/
/*                                                                           */
/*                              User Control Task                            */
/*                                                                           */
/*  This task is used to control your robot during the user control phase of */
/*  a VEX Competition.                                                       */
/*                                                                           */
/*  You must modify the code to add your own robot specific commands here.   */
/*---------------------------------------------------------------------------*/
float changeRange(float x, float in_min, float in_max, float out_min, float out_max)
{
	return (x - in_min) * (out_max - out_min) / (in_max - in_min) + out_min;
}
void fireCatapult()
{
	motor[hookServo] = 80;
	motor[catapultLeftA] = 127;
	motor[catapultRightA] = 127;
	motor[catapultLeftB] = 127;
	motor[catapultRightB] = 127;
	wait1Msec(500);
	motor[catapultLeftA] = 0;
	motor[catapultRightA] = 0;
	motor[catapultLeftB] = 0;
	motor[catapultRightB] = 0;
}
void resetCatapult()
{
	motor[hookServo] = -30;
	motor[catapultLeftA] = 127;
	motor[catapultRightB] = 127;
	motor[catapultLeftA] = 127;
	motor[catapultRightB] = 127;
	while(SensorValue[catapultButton] <225);
	wait1Msec(500);
	motor[catapultLeftA] = 0;
	motor[catapultRightB] = 0;
	motor[catapultLeftA] = 0;
	motor[catapultRightB] = 0;
}
task robotDrive()
{
	wait1Msec(5);
	while(1)
	{
		// XDRIVE
		float x,y,z;
		x = changeRange(vexRT[Ch1],-127,127,-1,1);
		y = changeRange(vexRT[Ch2],-127,127,-1,1);
		z = changeRange(vexRT[Ch4],-127,127,-1,1);
		x = x*x;
		y = y*y;
		z = z*z;
		x = changeRange(x,-1,1,-127,127);
		y = changeRange(y,-1,1,-127,127);
		z = changeRange(z,-1,1,-127,127);
		if(vexRT[Ch1] < 0)
			x = x*-1
		if(vexRT[Ch2] < 0)
			y = y*-1
		if(vexRT[Ch4] < 0)
			z = z*-1
	writeDebugStreamLine("%d %d %d", x, y, z);
		motor[frontLeft]  =   y + x + z;
		motor[frontRight] =  -y + x + z;
		motor[backLeft]   =   y - x + z;
		motor[backRight]  =  -y - x + z;
		wait1Msec(20);
	}
}
task controlLiftGrab()
{
	while(1)
	{
		if(vexRT[Btn7U])
		{
			motor[liftGrab]=75;
			wait1Msec(250);
			motor[liftGrab] = 0;
		}
		else if(vexRT[Btn7L])
		{
			motor[liftGrab] = -75;
			wait1Msec(250);
			motor[liftGrab] = 0;
		}
	}
}
task usercontrol()
{
	// User control code here, inside the loop

	startTask(robotDrive);
	startTask(controlLiftGrab);
	while (true)
	{

		// Catapult
		if(vexRT[Btn5U]) // Fire Without Reset
		{
			while(vexRT[Btn5U]);
			fireCatapult();
		}
		else if(vexRT[Btn6U]) // Fire With Reset
		{
			while(vexRT[Btn6U]);
			fireCatapult();
			resetCatapult();
		}
		else if(vexRT[Btn5D]) // Manual Negative
		{
			motor[catapultLeftA]  = -127;
			motor[catapultLeftB]  = -127;
			motor[catapultRightA]  = -127;
			motor[catapultRightB]  = -127;
		}
		else if(vexRT[Btn6D]) // Manual Poisitve
		{
			motor[catapultLeftA]  = 127;
			motor[catapultRightA] = 127;
			motor[catapultLeftB]  = 127;
			motor[catapultRightB] = 127;
		}
		else
		{
			motor[catapultLeftA]  = 0;
			motor[catapultRightA] = 0;
			motor[catapultLeftB]  = 0;
			motor[catapultRightB] = 0;
		}
		
		if(vexRT[Btn8U])
		{
			motor[hookServo] = 80;
		}
		else if(vexRT[Btn8R])
		{
			motor[hookServo] = -30;
		}
		wait1Msec(20);
	}
}
